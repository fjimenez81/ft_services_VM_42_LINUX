FROM alpine:latest

COPY init_file wordpress.sql my.cnf telegraf.conf setup.sh ./

RUN chmod +x setup.sh

# Install MySQL and dependencies
RUN apk update && \
	apk upgrade && \
	apk add --no-cache mysql mysql-client

# Setup MySQL
RUN mkdir -p /run/mysqld && \
	mv my.cnf /etc/

# Install telegraf
# apk add --no-cache --repository http://dl-cdn.alpinelinux.org/alpine/edge/testing/ telegraf
RUN apk add --no-cache --repository http://dl-3.alpinelinux.org/alpine/edge/community telegraf && \
	mkdir -p /etc/telegraf && \
	mv telegraf.conf /etc/telegraf/

EXPOSE 3306

CMD ./setup.sh
